<body style ="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    
    
<h1>See all the Pokemon!</h1>
<div style = "width: 100%; height: 20px; color: rgb(255, 0, 0); border: solid black; background-color: rgb(0, 0, 0); text-align: center; font-weight: 500;">POKEDEX</div>
<ul>
    <% pokemon.forEach((mon, index)=> { %>
        <li>
            <a href="/pokemon/<%= index %>">
                
                <h2>  <%= mon.name.charAt(0).toUpperCase() + mon.name.slice(1)%>  </h2>
            </a>
        </li>
        <% }) %>
    </ul>
    
    
</body>
